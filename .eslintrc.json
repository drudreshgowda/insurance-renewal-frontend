{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-unused-vars": ["warn", { 
      "vars": "all", 
      "args": "after-used", 
      "ignoreRestSiblings": false,
      "argsIgnorePattern": "^_"
    }],
    "react-hooks/exhaustive-deps": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
} 